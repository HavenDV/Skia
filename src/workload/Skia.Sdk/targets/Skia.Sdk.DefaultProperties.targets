<Project>

  <PropertyGroup>
    <SkiaApplication Condition=" '$(SkiaApplication)' == '' And '$(OutputType)' == 'Exe' ">true</SkiaApplication>
    <SkiaApplication Condition=" '$(SkiaApplication)' == '' ">false</SkiaApplication>
    <EnableImplicitRuntimeIdentifiers Condition=" '$(EnableImplicitRuntimeIdentifiers)' == '' And '$(UseMaui)' == 'true' ">true</EnableImplicitRuntimeIdentifiers>
    <EnableImplicitRuntimeIdentifiers Condition=" '$(EnableImplicitRuntimeIdentifiers)' == '' ">false</EnableImplicitRuntimeIdentifiers>
    <!-- Set the default RuntimeIdentifier if not already specified. -->
    <RuntimeIdentifier Condition=" '$(EnableImplicitRuntimeIdentifiers)' == 'true' And '$(RuntimeIdentifier)' == '' And '$(RuntimeIdentifiers)' == '' ">skia-x86</RuntimeIdentifier>
    <UseAppHost>false</UseAppHost>
    <_RuntimeIdentifierUsesAppHost>false</_RuntimeIdentifierUsesAppHost>
  </PropertyGroup>

  <PropertyGroup>
    <_IsSkiaDefined>$([System.Text.RegularExpressions.Regex]::IsMatch('$(DefineConstants.Trim())', '(^|;)__SKIA__($|;)'))</_IsSkiaDefined>
    <DefineConstants Condition="!$(_IsSkiaDefined)">__SKIA__;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>
